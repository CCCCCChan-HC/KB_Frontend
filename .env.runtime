# NEXT_PUBLIC_CAS_SERVICE_URL=https://kb.company.com/login
# CAS_BASE_URL=http://cas-server:8443/cas
# CAS_SERVICE_URL=https://kb.company.com/login
# NEXTAUTH_URL=https://kb.company.com
# HTTPS=true
# SSL_DOMAIN=kb.company.com